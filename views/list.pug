extends layout

block content
	include ./components/title
	.container
		.row
			table.table.table-striped
				thead
					th 电影名称
					th 导演
					th 国家
					th 上映时间
					th 录入时间
					th 查看
					th 更新
					th 删除
				tbody
					each item in movies
					tr.item-id-#{item._id}
						td #{item.title}
						td #{item.doctor}
						td #{item.country}
						td #{item.year}
						td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
						td: a(target='_blank' href='../movie/#{item._id}') 查看
						td: a(target='_blank' href='../admin/update/#{item._id}')
						td: button.btn.btn-danger.del(data-id='#{item._id}')