extends layout

block content
	include ./components/title
	.container
		.row
			if categories && categories.length > 0
				each cat in categories
					.panel.panel-default
						.panel-heading
							h3: a(href=`/result?cat=${cat._id}&index=0`) #{cat.name}
						.panel-body
							if cat.movies && cat.movies.length > 0
								each item in cat.movies
									.col-md-2
										.thumbnail
											a(href=`/movie/${item._id}`)
												img(src=`${item.poster}` alt=`${item.title}`)
											.caption
												p: strong #{item.title}
												p: a.btn.btn-primary(href=`/movie/${item._id}`) 观看预告


