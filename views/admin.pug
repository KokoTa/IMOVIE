extends layout

block content
	include ./components/title
	.container
		.row
			form.form-horizontal(method='post' action='/admin/movie/new')
				input(type='hidden' name='_id' value=`${movie._id}`)
				.form-group
					label 电影名称
					input.form-control(type='text' name='title' value=`${movie.title}`)
				.form-group
					label 导演
					input.form-control(type='text' name='doctor' value=`${movie.doctor}`)
				.form-group
					label 国家
					input.form-control(type='text' name='country' value=`${movie.country}`)
				.form-group
					label 语言
					input.form-control(type='text' name='language' value=`${movie.language}`)
				.form-group
					label 海报地址
					input.form-control(type='text' name='poster' value=`${movie.poster}`)
				.form-group
					label 片源地址
					input.form-control(type='text' name='flash' value=`${movie.flash}`)
				.form-group
					label 上映时间
					input.form-control(type='text' name='year' value=`${movie.year}`)
				.form-group
					label 简介
					input.form-control(type='text' name='summary' value=`${movie.summary}`)
				.form-group
					button.btn.btn-primary(type='submit') 录入